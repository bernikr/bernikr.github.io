[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.yml]
indent_style = space
indent_size = 2

[*.html]
indent_size = 2

[*.sass]
indent_style = tab
indent_size = 4
